{
  "$id": "PostSaveFormSuccess",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Post save form success inputs schema",
  "type": "object",

  "properties": {
    "result": {
      "type": "object",

      "properties": {
        "step": {
          "type": "number"
        },
        "type": {
          "type": "string",
          "enum": ["needRequired", "allowedNewStep", "addedNewFields"]
        }
      },
      "required": ["step", "type"]
    },
    "status": {
      "type": "string",
      "const": "success"
    }
  },
  "required": ["result", "status"]
}
