{
  "$id": "PostCheckCodeSuccessSchema",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Post Check Code Success Schema",
  "type": "object",

  "properties": {
    "result": {
      "type": "object",

      "properties": {
        "token": {
          "type": "object",
          "properties": {
            "token_type": {
              "type": "string",
              "const": "Bearer"
            },
            "expires_in": {
              "type": "integer"
            },
            "access_token": {
              "type": "string"
            },
            "refresh_token": {
              "type": "string"
            }
          },
          "required": [
            "token_type",
            "expires_in",
            "access_token",
            "refresh_token"
          ]
        }
      },
      "required": ["token"]
    },
    "status": {
      "type": "string",
      "const": "success"
    }
  },
  "required": ["result", "status"]
}
