{
  "$id": "getStaticUserInfoSuccess",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "getStaticUserInfoSuccess",
  "type": "object",

  "properties": {
    "status": {
      "type": "string",
      "const": "success"
    },
    "result": {
      "type": "object",

      "properties": {
        "userData": {
          "type": "object",

          "properties": {
            "email": {
              "type": "string"
            },
            "img": {
              "type": "string"
            },
            "roles": {
              "type": "array",
              "items": {
                "type": "object",

                "properties": {
                  "id": {
                    "type": "number",
                    "minimum": 1,
                    "maximum": 6
                  },
                  "name": {
                    "enum": [
                      "admin",
                      "client",
                      "manager",
                      "recruiter",
                      "specialist",
                      "supervisor"
                    ]
                  }
                },
                "required": ["id", "name"]
              }
            }
          },
          "required": ["email", "img", "roles"]
        }
      },
      "required": ["userData"]
    }
  },
  "required": ["status", "result"]
}
