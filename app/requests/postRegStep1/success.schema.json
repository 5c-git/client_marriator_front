{
  "$id": "Step1",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Step1 inputs schema",
  "type": "object",
  "properties": {
    "inputs": {
      "type": "array",
      "minItems": 1,
      "items": {
        "anyOf": [
          {
            "$ref": "text"
          },
          {
            "$ref": "select"
          },
          {
            "$ref": "radio"
          },
          {
            "$ref": "checkboxMultiple"
          },
          {
            "$ref": "photoCheckbox"
          },
          {
            "$ref": "checkbox"
          },
          {
            "$ref": "file"
          }
        ]
      }
    }
  },
  "required": ["inputs"]
}
